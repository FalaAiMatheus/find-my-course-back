generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Colleges {
  id Int @id @default(autoincrement())
  name String
  category_id Int @unique
  street_id Int @unique
  courses Courses[]
  rating Float
  category Categorys? @relation(fields: [category_id], references: [id])
  street Streets? @relation(fields: [street_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("colleges")
}

model Courses {
  id Int @id @default(autoincrement())
  name String
  graduation_type_id Int @unique
  graduation GraduationType @relation(fields: [graduation_type_id], references: [id])
  course_area String
  teaching_modality String
  colleges Colleges[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("courses")
}

model Categorys {
  id Int @id @default(autoincrement())
  name String
  college Colleges?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("categorys")
}

model Streets {
  id Int @id @default(autoincrement())
  name String
  college Colleges?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("streets")
}
model GraduationType {
  id Int @id @default(autoincrement())
  name String
  course Courses?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("graduation_type")
}